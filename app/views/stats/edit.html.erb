<div class="contents row">
  <div class="container">
    <h3>成績を編集する</h3>
    <%= form_with(model: @stat, url: player_stats_path, local: true) do |form| %>
      <%= form.hidden_field :player_id, value: params[:player_id] %>

      <div class="form-group">
        <%= form.label :at_bats, "打席", class: "form-label" %>
        <%= form.text_field :at_bats, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :at_hits, "ヒット", class: "form-label" %>
        <%= form.text_field :at_hits, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :home_runs, "ホームラン", class: "form-label" %>
        <%= form.text_field :home_runs, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :rbis, "打点", class: "form-label" %>
        <%= form.text_field :rbis, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :innings_pitched, "投球回", class: "form-label" %>
        <%= form.number_field :innings_pitched, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :earned_run, "自責点", class: "form-label" %>
        <%= form.number_field :earned_run, class: "form-control" %>
      </div>

      <%= form.submit "編集する", class: "post" %>
    <% end %>

    
  </div>
</div>
