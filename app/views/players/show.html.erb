<div class="player-show">
  <div class="player-box">
    <h2 class="name"><%= @player.name %></h2>
    <div class="image">
      <%= image_tag @player.image ,class:"player-box-img" %>
    </div>

    <%= link_to "成績を登録する", new_player_stat_path(player_id: @player.id), class:"post"%>
     <table class="detail-table">
      <tbody>

      
      

        <tr>
          <th class="detail-item">ポジション</th>
          <td class="detail-value"><%= @player.position%></td>
        </tr>
        <tr>
          <th class="detail-item">生年月日</th>
          <td class="detail-value"><%= @player.birthday %></td>
        </tr>
        <tr>
          <th class="detail-item">身長</th>
          <td class="detail-value"><%= @player.height %></td>
        </tr>
        <tr>
          <th class="detail-item">体重</th>
          <td class="detail-value"><%= @player.weight %></td>
        </tr>
        
      
      </tbody>
      </table>
     
      <div class="stat-box">
   <h2 class="name">成績一覧</h2>
  <table class="detail-table">
    <tbody>
      <% @stats.each do |stat| %>
       <tr> 
        <td colspan="2">
          <%= link_to "成績を編集する", edit_player_stat_path(player_id: @player.id, stat_id: stat.id), class: "post" %>
          
        </td>
        </tr>
        <tr>
          <th class="detail-item">打席</th>
          <td class="detail-value"><%= stat.at_bats %></td>
        </tr>
        <tr>
          <th class="detail-item">ヒット</th>
          <td class="detail-value"><%= stat.at_hits %></td>
        </tr>
        <tr>
          <th class="detail-item">ホームラン</th>
          <td class="detail-value"><%= stat.home_runs %></td>
        </tr>
        <tr>
          <th class="detail-item">打点</th>
          <td class="detail-value"><%= stat.rbis %></td>
        </tr>
        
        <tr>
          <th class="detail-item">投球回</th>
          <td class="detail-value"><%= stat.innings_pitched %></td>
        </tr>
        <tr>
          <th class="detail-item">自責点</th>
          <td class="detail-value"><%= stat.earned_run %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

     

  </div>
</div>
